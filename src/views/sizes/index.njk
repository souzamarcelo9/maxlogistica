{% extends "layout.njk" %}

{% block content %}

<div class="container py-4">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">Tamanhos Padr√£o</h2>
    <a href="/sizes/new" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Novo tamanho
    </a>
  </div>

  <table class="table table-hover">
    <thead class="table-light">
      <tr>
        <th>Etiqueta</th>
        <th>Unidade</th>
        <th>Quantidade</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for s in sizes %}
      <tr>
        <td>{{ s.label }}</td>
        <td>{{ s.unit }}</td>
        <td>{{ s.quantity }}</td>
        <td>
          <form action="/sizes/delete/{{ s._id }}" method="post"
                onsubmit="return confirm('Excluir este tamanho?')">
            <button class="btn btn-sm btn-outline-danger">
              <i class="bi bi-trash"></i>
            </button>
          </form>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

</div>

{% endblock %}
