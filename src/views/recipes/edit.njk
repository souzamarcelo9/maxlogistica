{% extends "layout.njk" %}

{% block content %}

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="fw-bold text-primary mb-0">
      <i class="bi bi-clipboard-check"></i> Editar Receita / Ficha TÃ©cnica
    </h3>
    <a href="/recipes" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left"></i> Voltar
    </a>
  </div>

  <div class="card shadow-sm border-0 mb-3">
    <div class="card-body">
      <h5 class="fw-semibold mb-2">{{ recipe.product.name }}</h5>
      <p class="text-muted mb-0">
        Tamanho: <strong>{{ recipe.size }}</strong><br>
        Criada em: {{ recipe.createdAt.toLocaleDateString() }}
      </p>
    </div>
  </div>

  <form action="/recipes/edit/{{ recipe._id }}?_method=PUT" method="POST">

    <div class="card shadow-sm border-0">
      <div class="card-body p-3">

        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="fw-semibold text-secondary mb-0">
            <i class="bi bi-list-check"></i> Itens da Receita
          </h5>
          <button type="button" class="btn btn-sm btn-outline-primary" onclick="addRow()">
            <i class="bi bi-plus-circle"></i> Adicionar item
          </button>
        </div>

        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th style="width: 45%">Ingrediente</th>
                <th style="width: 25%">Quantidade usada</th>
                <th style="width: 20%">Unidade</th>
                <th style="width: 10%"></th>
              </tr>
            </thead>
            <tbody id="items-body">
              {% for item in recipe.items %}
                <tr>
                  <td>
                    <select name="ingredientId"
                            class="form-select"
                            required
                            data-index="{{ loop.index0 }}">
                      <option value="">Selecione...</option>
                      {% for ing in ingredients %}
                        <option value="{{ ing._id }}">{{ ing.name }}</option>
                      {% endfor %}
                    </select>
                  </td>

                  <td>
                    <input type="number" name="usedQty"
                          class="form-control"
                          value="{{ item.usedQty }}"
                          step="0.01" required>
                  </td>

                  <td>{{ item.ingredient.unit }}</td>
                </tr>
           {% endfor %}
            </tbody>
          </table>
        </div>

      </div>
    </div>

    <div class="text-end mt-3">
      <button type="submit" class="btn btn-success">
        <i class="bi bi-save"></i> Salvar alteraÃ§Ãµes
      </button>
    </div>

  </form>
</div>


<script>
const recipeData = {{ recipeJson | safe }};

window.addEventListener("DOMContentLoaded", () => {
  if (!recipeData.items) return;

  recipeData.items.forEach((item, index) => {
    const select = document.querySelector(`select[data-index="${index}"]`);
    if (!select) return;

    const ingredientId = item.ingredient?._id;

    if (ingredientId) {
      select.value = ingredientId; // ðŸ”¥ aqui a mÃ¡gica acontece
    }
  });
});
</script>

<script>
 
  function addRow() {
    const tbody = document.getElementById("items-body");
    const rowCount = tbody.querySelectorAll("tr").length;
    const tr = document.createElement("tr");

    tr.innerHTML = `
      <td>
        <select name="ingredientId" class="form-select" required data-index="${rowCount}">
          <option value="">Selecione...</option>
          {% for ing in ingredients %}
            <option value="{{ ing._id }}">{{ ing.name }}</option>
          {% endfor %}
        </select>
      </td>
      <td>
        <input type="number" name="usedQty" class="form-control" step="0.01" required>
      </td>
      <td>
        -
      </td>
      <td class="text-end">
        <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeRow(this)">
          <i class="bi bi-trash"></i>
        </button>
      </td>
    `;

    tbody.appendChild(tr);
  }

  function removeRow(btn) {
    const tr = btn.closest("tr");
    if (tr) tr.remove();
  }
</script>



{% endblock %}
