{% extends "layout.njk" %}

{% block content %}
<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="fw-bold text-primary mb-0">
      <i class="bi bi-basket"></i> Ingredientes / Insumos
    </h3>
    <a href="/ingredients/new" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Novo ingrediente
    </a>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-body p-0">
      <table class="table mb-0 table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Unidade</th>
            <th>Qtd pacote</th>
            <th>Custo pacote (R$)</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for ing in ingredients %}
            <tr>
              <td>{{ ing.name }}</td>
              <td>{{ ing.type }}</td>
              <td>{{ ing.unit }}</td>
              <td>{{ ing.packageQty }}</td>
              <td>{{ ing.packageCost }}</td>
              <td class="text-end">
                <form action="/ingredients/delete/{{ ing._id }}" method="POST" onsubmit="return confirm('Remover ingrediente?')">
                  <button class="btn btn-sm btn-outline-danger" type="submit">
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="6" class="text-center text-muted py-3">Nenhum ingrediente cadastrado.</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
